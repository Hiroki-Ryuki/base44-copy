import React from 'react';
import { motion } from 'framer-motion';
import { MessageSquare, Calendar, ChevronRight } from 'lucide-react';
import { Card } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { format } from 'date-fns';
import { ja } from 'date-fns/locale';

export default function ConversationHistory({ consultations, conversations }) {
  if (!consultations || consultations.length === 0) {
    return (
      <Card className="bg-slate-900/50 border-slate-800 p-8 text-center">
        <MessageSquare className="w-12 h-12 text-white/30 mx-auto mb-3" />
        <p className="text-white/50">まだ会話履歴がありません</p>
        <Link to={createPageUrl('Consultation')}>
          <button className="mt-4 bg-violet-600 hover:bg-violet-700 text-white rounded-full px-6 py-2 text-sm">
            最初の鑑定を始める
          </button>
        </Link>
      </Card>
    );
  }

  return (
    <div className="space-y-3">
      {consultations.map((consultation) => {
        const conversation = conversations?.find(c => c.metadata?.consultation_id === consultation.id);
        const lastMessage = conversation?.messages?.[conversation.messages.length - 1];
        
        return (
          <Link 
            key={consultation.id} 
            to={createPageUrl('Consultation') + `?conversation_id=${conversation?.id || ''}`}
          >
            <motion.div
              initial={{ opacity: 0, y: 10 }}
              animate={{ opacity: 1, y: 0 }}
              whileHover={{ scale: 1.01 }}
            >
              <Card className="bg-slate-900/50 border-slate-800 p-4 hover:border-violet-500/50 transition-all cursor-pointer">
                <div className="flex items-center justify-between">
                  <div className="flex-1">
                    <div className="flex items-center gap-2 mb-2">
                      <MessageSquare className="w-4 h-4 text-violet-400" />
                      <Badge
                        variant="outline"
                        className={consultation.status === 'completed' ? 'text-emerald-400 border-emerald-400/30' : 'text-amber-400 border-amber-400/30'}
                      >
                        {consultation.status === 'completed' ? '完了' : '進行中'}
                      </Badge>
                    </div>
                    
                    <p className="text-white/90 text-sm mb-1 line-clamp-2">
                      {consultation.concern || '鑑定の相談'}
                    </p>
                    
                    {lastMessage && (
                      <p className="text-white/40 text-xs line-clamp-1 mb-2">
                        {lastMessage.role === 'user' ? 'あなた' : '占い師'}: {lastMessage.content?.substring(0, 50)}...
                      </p>
                    )}
                    
                    <p className="text-white/30 text-xs flex items-center gap-1">
                      <Calendar className="w-3 h-3" />
                      {format(new Date(consultation.created_date), 'M月d日 HH:mm', { locale: ja })}
                      {consultation.follow_up_count > 0 && (
                        <span className="ml-2">• 追加会話 {consultation.follow_up_count}回</span>
                      )}
                    </p>
                  </div>
                  <ChevronRight className="w-5 h-5 text-white/30 flex-shrink-0" />
                </div>
              </Card>
            </motion.div>
          </Link>
        );
      })}
    </div>
  );
}
